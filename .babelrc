{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "browsers": ["> 1%", "last 2 versions"]
      }
    }],
    ["@babel/preset-react", {
      "runtime": "automatic"
    }]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@": "./src",
          "@features": "./src/features",
          "@shared": "./src/shared",
          "@hooks": "./src/hooks",
          "@pages": "./src/pages"
        }
      }
    ]
  ]
}
